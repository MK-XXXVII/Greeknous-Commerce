{
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.fontFamily": "Fira Mono, Hack, AnonymousPro,  monospace",
  "editor.fontWeight": 400,
  "workbench.preferredDarkColorTheme": "Dark+ with Italics",
  "workbench.preferredLightColorTheme": "One Dark Pro Flat",
  "terminal.integrated.allowMnemonics": true,
  "terminal.explorerKind": "external",
  "typescript.preferences.quoteStyle": "single",
  "editor.renderWhitespace": "trailing",
  "editor.accessibilityPageSize": 8,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fastScrollSensitivity": 4,
  "editor.inlayHints.fontSize": 18,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "workbench.list.smoothScrolling": true,
  "workbench.activityBar.iconClickBehavior": "focus",
  "workbench.colorTheme": "Snazzy",
  "workbench.tree.indent": 18,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.limit.value": 15,
  "workbench.editor.sharedViewState": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.titleScrollbarSizing": "default",
  "npm.enableRunFromFolder": true,
  "workbench.list.multiSelectModifier": "alt",
  "diffEditor.codeLens": true
}
